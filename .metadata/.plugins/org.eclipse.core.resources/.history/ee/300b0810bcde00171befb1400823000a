<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport"
	content="width=device-width,initial-scale = 1.0" />
<script src="/tree/js/jquery-3.2.1.min.js"></script>
<script src="/tree/js/html2canvas.min.js"></script>
<script src="/tree/js/canvas2image.js"></script>
<title>Insert title here</title>
<script>
	$(function() { 
		$("#save").click(function() {
			html2canvas($("#div1"), {
				onrendered : function(canvas) {
					theCanvas = canvas;
					document.body.appendChild(canvas);

					// Convert and download as image 
					Canvas2Image.saveAsPNG(canvas);
					$("#div1").append(canvas);
					// Clean up 
					//document.body.removeChild(canvas);
				}
			});
		});
	});
</script>
</head>
<body>

	<div id="div1"
		style="background-color: red; width: 500px; height: 600px;">
		<img style="filter: sepia(100%); width: 200px;" alt="dd"
			src="/studyhtml5/images/a-book-magic.jpg">
	</div>
	<button id="save">click</button>


</body>
</html>