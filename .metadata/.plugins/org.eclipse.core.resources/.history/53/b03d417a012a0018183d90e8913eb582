/**
 * 
 */

$(document).ready(function () {
    opacity_on();
});

function opacity_on() {
    var jsTuto = document.getElementsByClassName("jsTuto");
    var test = document.getElementById("test");

    for (var i = 0; i < jsTuto.length-1; i++) {
        jsTuto[i].onmouseenter = function () {
            test.innerHTML += "a";
            jsTuto[i].childNodes[0].className += " opacity_on";
        };

    }
    for (var i = 0; i < jsTuto.length-1; i++) {
        jsTuto[i].onmouseleave = function () {
            test.innerHTML += "b";
            jsTuto[i].childNodes[0].className = "jsImg";
        };

    }

}