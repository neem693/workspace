/**
 * 
 */

$(document).ready(function () {
    opacity_on();
});

function opacity_on() {
    var jsTuto = document.getElementsByClassName("jsTuto");
    for (var i = 0; i < jsTuto.length; i++) {
        jsTuto[i].onmouseenter = function () {
            document.getElementById("test").innerHTML += "a";
            this.childNodes[0].className += " opacity_on";
        };

    }
    for (var i = 0; i < jsTuto.length; i++) {
        jsTuto[i].onmouseleave = function () {
            this.childNodes[0].className = "jsImg";
        };

    }

    document.getElementsByClassName("jsTuto").onmouseleave = function () {
        this.childNodes[0].className = "jsImg";
    };

}